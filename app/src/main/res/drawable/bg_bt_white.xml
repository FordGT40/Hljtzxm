<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 圆角 -->
    <corners
        android:radius="5dp"/>
    <!-- 设置圆角半径 -->
    <stroke android:color="#1e88e5" android:width="1dp"/>
    <!-- 间隔 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"/><!-- 各方向的间隔 -->

    <!-- 填充 -->
    <solid
        android:color="#ffffff"/><!-- 填充的颜色 -->

</shape>